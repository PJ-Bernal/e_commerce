<h1 class="text-3xl font-bold text-center my-8"><%= Category.find(@category_id).name.capitalize %> Products</h1>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @products.each do |product| %>
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold mb-2"><%= link_to product.product_name, product_path(product) %></h2>
      <p class="text-gray-700 mb-2">Price: <%= number_to_currency(product.product_price) %></p>
      <p class="text-gray-600 mb-4"><%= product.product_description %></p>
      <p class="text-sm text-gray-500">Stock: <%= product.product_stock %></p>
    </div>
  <% end %>
</div>

<div class="mt-8">
  <%= paginate @products %>
</div>
